<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepositFromHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/back_to_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:autoSizeTextType="uniform"
            android:background="@null"
            android:text="X"
            android:textColor="#FB5641" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/fontspring_bold"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Send via UPI"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="90dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/payee_shape" />

            <TextView
                android:id="@+id/initials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/fontspring_bold"
                android:gravity="center_horizontal"
                android:textAlignment="gravity"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/fontspring_bold"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:text="Vaibhav Vinay Joshi"/>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/verified" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:src="@drawable/verified_tick_foreground" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/upiid"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="2dp"
                android:text="Hello"
                android:textStyle="italic"
                android:textSize="11sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:background="@color/black" />

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="245dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Rs"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/fontspring_bold"
            android:textSize="25sp"
            android:textAlignment="gravity"
            android:gravity="center_vertical|center_horizontal" />

        <EditText
            android:id="@+id/amountentered"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:fontFamily="@font/fontspring_bold"
            android:hint="Enter Amount"
            android:textSize="25sp"
            android:cursorVisible="false"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="265dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/note"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:background="@null"
        android:fontFamily="@font/fontspring_bold"
        android:hint="Enter Note"
        android:text="Sent via Hupiter" />

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="345dp"
        android:fontFamily="@font/fontspring_bold"
        android:text="Pay with"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="5dp">

        <RadioGroup
            android:id="@+id/selectbankrg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/portfolio_round"
                    android:layout_marginTop="12dp"/>

                <RadioButton
                    android:id="@+id/rbtn1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fontspring_bold"
                    android:textSize="20sp"
                    android:text="Hupiter Money"
                    android:layoutDirection="rtl"/>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="#B3A6A6"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/portfolio_round"
                    android:layout_marginTop="12dp"/>

                <RadioButton
                    android:id="@+id/rbtn2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fontspring_bold"
                    android:textSize="20sp"
                    android:text="Karnataka Bank Ltd."
                    android:layoutDirection="rtl"/>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="#B3A6A6"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/portfolio_round"
                    android:layout_marginTop="12dp"/>

                <RadioButton
                    android:id="@+id/rbtn3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fontspring_bold"
                    android:textSize="20sp"
                    android:text="Other Methods"
                    android:layoutDirection="rtl"/>

            </LinearLayout>

        </RadioGroup>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/continuedeposit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:layout_marginBottom="10dp"
        android:background="#FB5641"
        android:fontFamily="@font/fontspring_bold"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>