<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepositFromHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/back_to_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:autoSizeTextType="uniform"
            android:background="@null"
            android:text="X"
            android:textColor="#FB5641" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/fontspring_bold"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Deposit in Hupiter Account"
            android:textSize="20sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="90dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/fontspring_bold"
        android:text="Enter Amount"
        android:textSize="19sp" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="170dp"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Rs"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fontspring_bold"
            android:textSize="25sp"
            android:textAlignment="gravity"
            android:gravity="center_vertical|center_horizontal"
            />

    <EditText
        android:id="@+id/amountentered"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:inputType="number"
        android:fontFamily="@font/fontspring_bold"
        android:text="2000"
        android:textSize="25sp"
        android:cursorVisible="false"
        android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="#B7DF95"
            android:fontFamily="@font/fontspring_bold"
            android:text="500"
            android:textColor="#436C20"
            android:textSize="20dp"
            android:button="@null"
            android:textAlignment="center"/>

        <RadioButton
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#B7DF95"
            android:fontFamily="@font/fontspring_bold"
            android:text="1000"
            android:textColor="#436C20"
            android:textSize="20dp"
            android:button="@null"
            android:textAlignment="center"/>

        <RadioButton
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#B7DF95"
            android:fontFamily="@font/fontspring_bold"
            android:text="2000"
            android:textColor="#436C20"
            android:textSize="20dp"
            android:button="@null"
            android:textAlignment="center"/>

        <RadioButton
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="#B7DF95"
            android:fontFamily="@font/fontspring_bold"
            android:text="5000"
            android:textAlignment="center"
            android:textColor="#436C20"
            android:textSize="20dp"
            android:button="@null"/>

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/fontspring_bold"
        android:text="Pay with"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="5dp">

        <RadioGroup
            android:id="@+id/selectbankrg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/portfolio_round"
                    android:layout_marginTop="12dp"/>

                <RadioButton
                    android:id="@+id/rbtn1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fontspring_bold"
                    android:textSize="20sp"
                    android:text="Karnataka Bank Ltd."
                    android:layoutDirection="rtl"/>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="#B3A6A6"
                android:layout_marginLeft="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/portfolio_round"
                    android:layout_marginTop="12dp"/>

                <RadioButton
                    android:id="@+id/rbtn2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fontspring_bold"
                    android:textSize="20sp"
                    android:text="Other Methods"
                    android:layoutDirection="rtl"/>

            </LinearLayout>

        </RadioGroup>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/continuedeposit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:layout_marginBottom="10dp"
        android:background="#FB5641"
        android:fontFamily="@font/fontspring_bold"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>